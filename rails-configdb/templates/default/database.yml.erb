<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: mysql
  encoding: utf8
  host: <%= @hostname.to_s.inspect %>
  port: <%= @port.to_i.inspect %>
  database: <%= @database.to_s.inspect %>
  username: <%= @username.to_s.inspect %>
  password: <%= @password.to_s.inspect %>
  reconnect: true

<% end %>

